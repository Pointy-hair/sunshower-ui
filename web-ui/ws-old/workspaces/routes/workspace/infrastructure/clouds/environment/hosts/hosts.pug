template
    .ui.hidden.divider
    .ui.container
        .ui.basic.segment
            h2.ui.header
                .content
                    |   Hosts
        .ui.hidden.divider
    .ui.container
        .ui.basic.segment
            .ui.grid
                .four.wide.column
                    .ui.small.icon.fluid.input
                        input(type='text', placeholder='Search')
                        i.search.icon
                .eight.wide.column
                    .ui.hasli--basic_blue.hasli--blue.selection.dropdown
                        | Actions
                        i.dropdown.icon
                        .menu
                            .item
                                i.ion-android-sync.large.grey.icon
                                | Sync
                            .item
                                i.ion-trash-a.large.grey.icon
                                | Delete
                    .ui.hasli--basic_blue.hasli--blue.selection.dropdown
                        input(type='hidden', name='type')
                        .default.text.hasli--blue Select: Type
                        i.dropdown.icon
                        .menu
                            .item(data-value="1") All
                            .item(data-value="2") AWS
                .four.wide.right.aligned.column
                    span.widget-icons
                        .ui.small.button.primary(click.delegate="addCloud()") Add Host
        .ui.basic.segment
            table.ui.very.basic.very.padded.selectable.table
                thead
                    tr
                        th.right.aligned
                            .ui.master.checkbox
                                input(type='checkbox', name='master')
                                label
                        th Name
                        th State
                        th IP
                        th Ports
                        th CPUs
                        th Memory
                        th Disk
                        th.right.aligned
                            i.link.big.blue.ion-ios-loop-strong.icon(
                            class="${loading ? 'loading' : ''}"
                            click.delegate="refresh()"
                            )
                tbody
                    tr(if.bind="loading")
                        td.widget-table-reloading(colspan='10')
                            .ui.active.inverted.dimmer
                                .ui.huge.loader
                    tr(if.bind="(!hosts || hosts.length == 0) && !loading")
                        td.widget-table-reloading(colspan='10')
                            .ui.hidden.divider
                            h2.ui.center.aligned.icon.header
                                |   Looks like you don't have any hosts
                    tr(
                    show.bind="hosts.length > 0 && !loading",
                    as-element="compose",
                    view-model="common/resources/custom-elements/table/row",
                    view="apps/workspaces/resources/custom-elements/table/host-row.html"
                    repeat.for='host of hosts',
                    model.bind="host"
                    showVersion.bind="false"
                    )
