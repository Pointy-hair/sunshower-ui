template
    .ui.hidden.divider
    .ui.container
        .ui.basic.segment
            h2.ui.header
                .content
                    |   Applications
            .ui.hidden.divider
            .ui.link.cards
                .active.card
                    .content
                        img.right.floated.mini.ui.image(src='styles/themes/hasli/assets/images/logos/docker-icon.svg')
                        .header
                            .ui.checked.checkbox
                                input(type='checkbox', checked="")
                                label Custom Docker Application
    .ui.hidden.divider
    .ui.container
        .ui.basic.segment
            h4.ui.header
                .content
                    |   Deployed
        .ui.basic.segment
            .ui.grid
                .four.wide.column
                    .ui.small.icon.fluid.input
                        input(type='text', placeholder='Filter')
                        i.search.icon
                .twelve.wide.right.aligned.column
                    span.widget-icons
                        .ui.small.button.primary Update
        table.ui.very.basic.very.padded.selectable.table
            thead
                tr
                    th.right.aligned
                        .ui.master.checkbox
                            input(type='checkbox', name='master')
                            label
                    th Name
                    th Version
                    th State
                    th IP
                    th Ports
                    th CPUs
                    th Memory
                    th Disk
                    th.right.aligned
                        i.link.big.blue.ion-ios-loop-strong.icon(
                        class="${loading ? 'loading' : ''}"
                        click.delegate="refresh()"
                        )
            tbody
                tr(if.bind="loading")
                    td.widget-table-reloading(colspan='10')
                        .ui.active.inverted.dimmer
                            .ui.huge.loader
                tr(if.bind="(!isDeployed || isDeployed.length == 0) && !loading")
                    td.widget-table-reloading(colspan='10')
                        .ui.hidden.divider
                        h2.ui.center.aligned.icon.header
                            |   This application is not deployed to any hosts in this environment
                tr(
                show.bind="isDeployed.length > 0 && !loading",
                as-element="compose",
                view-model="common/resources/custom-elements/table/row",
                view="apps/workspaces/resources/custom-elements/table/host-row.html"
                repeat.for='host of isDeployed',
                model.bind="host"
                )

        .ui.basic.segment
            .ui.basic.segment
                .ui.grid
                    .four.wide.column
                        h4.ui.header
                            .content
                                |   Not Deployed
                    .twelve.wide.right.aligned.column
                        span.widget-icons
                            .ui.small.button.primary Deploy
            table.ui.very.basic.very.padded.selectable.table
                thead
                    tr
                        th.right.aligned
                            .ui.master.checkbox
                                input(type='checkbox', name='master')
                                label
                        th Name
                        th Version
                        th State
                        th IP
                        th Ports
                        th CPUs
                        th Memory
                        th Disk
                        th.right.aligned
                            i.link.big.blue.ion-ios-loop-strong.icon(
                            class="${loading ? 'loading' : ''}"
                            click.delegate="refresh()"
                            )
                tbody
                    tr(if.bind="loading")
                        td.widget-table-reloading(colspan='10')
                            .ui.active.inverted.dimmer
                                .ui.huge.loader
                    tr(if.bind="(!isNotDeployed || isNotDeployed.length == 0) && !loading")
                        td.widget-table-reloading(colspan='10')
                            .ui.hidden.divider
                            h2.ui.center.aligned.icon.header
                                |   There aren't any available hosts that aren't running this application
                    tr(
                    show.bind="isNotDeployed.length > 0 && !loading",
                    as-element="compose",
                    view-model="common/resources/custom-elements/table/row",
                    view="apps/workspaces/resources/custom-elements/table/host-row.html"
                    repeat.for='host of isNotDeployed',
                    model.bind="host"
                    showVersion.bind="true"
                    )
