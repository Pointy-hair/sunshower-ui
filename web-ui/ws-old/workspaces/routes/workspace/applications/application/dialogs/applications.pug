template
    .header Applications
    .content
        .ui.basic.segment.inline-loader-holder(if.bind="loading")
            .ui.active.inverted.dimmer.inline-loader
                .ui.large.loader
        template(if.bind="!loading")
            .ui.basic.segment(if.bind="applications.length == 0")
                .widget-table-empty-alert You have no applications available
            .ui.link.centered.four.cards(if.bind="applications.length > 0")
                .card(repeat.for="application of applications" click.delegate="save(application)")
                    //.image
                    .content ${application.name}