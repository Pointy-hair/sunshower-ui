template

    .auth-toggle
        | Already have an account?
        a.btn-flat(click.delegate="signIn()") Sign In

    h1 Create Hasli.io account
    //todo make fields required

    .input-field
        input(type='text' id="${firstnameId}" value.bind='user.firstname')
        label(for="${firstnameId}") First Name
    .input-field
        input(type='text' id="${lastnameId}" value.bind="user.lastname")
        label(for="${lastnameId}") Last Name
    .input-field
        input(type="text" id="${usernameId}" value.bind="user.username")
        label(for="${usernameId}") Username
    .row
        .col.m6.input-field
            input(type='text' id="${emailId}" value.bind='user.emailAddress')
            label(for="${emailId}") Email
        .col.m6.input-field
            input(type='text' id="${phoneId}" value.bind='user.phoneNumber')
            label(for="${phoneId}") Phone Number

    .row
        .col.m6.input-field
            input(ref="password" type='password' id="${passwordId}" value.bind='user.password')
            label(for="${passwordId}") Password
        .col.m6.input-field
            input(ref="confirmPassword" type='password' id="${confirmId}")
            label(for="${confirmId}") Confirm Password

    .button-holder
        button.waves-effect.btn(type="submit" click.delegate="signup()") Sign Up

