template
    .overlay.au-animate
        .ui.fluid.container(style="background-color: #fff !important")
            .ui.hidden.divider
            .ui.hidden.divider
            .ui.hidden.divider
            .ui.container
                .ui.secondary.menu
                    .ui.items
                        .item
                            .ui.tiny.image
                                img(
                                    if.bind="loaded"
                                    src='/hasli/api/v1/workspaces/${workspaceId}/applications/${id}/image'
                                )
                            .middle.aligned.content
                                a.header ${application.name}
                                .meta
                                    span ${application.description}
                                .description
                                    p
                                .extra
                                    | Version: ${application.version}
                    .right.menu
                        a.item
                            i.huge.ion-ios-close-empty.icon(click.delegate="close()")
                .ui.secondary.pointing.menu
                    a.item(
                    repeat.for='row of router.navigation',
                    class="${row.isActive ? 'active' : ''}"
                    href.bind='row.href'
                    )
                        | ${row.title}
        .ui.container
            .ui.fitted.divider
            router-view
