template
    .ui.hidden.divider
    .ui.hidden.divider
    .ui.hidden.divider
    .ui.grid.hasli-form.ui.form
        .row
            .thirteen.wide.column
                h3 Change Name
            .three.wide.column
                button.ui.primary.basic.button(click.delegate="incompleteFeature.notify($event)")
                    | Edit
        .row
            .ui.divider.sixteen.wide.column
        .row
            .thirteen.wide.column
                h3 Change Application
            .three.wide.column
                button.ui.primary.basic.button(click.delegate="incompleteFeature.notify($event)")
                    | Edit
        .row
            .ui.divider.sixteen.wide.column
        .row
            .thirteen.wide.column
                h3 Change Description
            .three.wide.column
                button.ui.primary.basic.button(click.delegate="incompleteFeature.notify($event)")
                    | Edit
        .row
            .ui.divider.sixteen.wide.column
        .row
            .twelve.wide.column
                h3 Add Github Repository
                .hasli-field.ui.field
                    .hasli-label
                        label Repository Url
                    .hasli-input.ui.input
                        input(type="text" name="repository", value.bind="application.repository.remote.location")
                .hasli-field.ui.field
                    .hasli-label
                        label Username
                    .hasli-input.ui.input
                        input(type="text" name="username", value.bind="application.repository.remote.credential.credential")
                .hasli-field.ui.field
                    .hasli-label
                        label Password
                    .hasli-input.ui.input
                        input(type="password" name="password", value.bind="application.repository.remote.credential.secret")
                .hasli-field.ui.field
                    button.ui.secondary.button.right.floated(click.delegate="saveRepository()")
                        | Save
            .four.wide.column
                img.ui.image.small(src="styles/themes/hasli/assets/images/github-mark.svg")
