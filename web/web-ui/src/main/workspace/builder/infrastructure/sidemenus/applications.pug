template
    .ui.secondary.pointing.menu
        a.active.item Applications
    .ui(ref="element", style="height:calc(100% - 24px);")
        div.ui.relaxed.divided.list(style="overflow-y:auto; height:100%; padding:8px")
            .item(
            repeat.for="descriptor of elements",
            draggable="true",
            dragend.delegate="addImage(descriptor.pid, $event)"
            )
                .ui.mini.image
                    img(src='/hasli/api/v1/storage/s3/images/${descriptor.logo_url.large}')
                .middle.aligned.content
                    | ${descriptor.name}
