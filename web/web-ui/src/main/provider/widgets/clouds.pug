template
    .overview-widget
        h2.widget-header Clouds
        .widget-action-menu
            .ui.icon.input
                input(type='text', placeholder='Search')
                i.search.icon
            .ui.basic.button.primary
                | Actions
                i.dropdown.icon
            .ui.basic.button.primary
                | Select: Type
                i.dropdown.icon
            span.widget-icons
                .ui.button.primary(
                class="${loading ? 'loading' : ''}"
                click.delegate="refresh()"
                ) Reload
                .ui.button.primary New
        table.ui.very.basic.table.widget-table
            thead
                tr
                    th
                        //checkbox
                    th
                        //logo
                    th Name
                    th Status
                    th IP
                    th Ports
                    th CPU
                    th Memory
                    th Disk
                    th
                        //settings
            tbody
                tr(if.bind="loading")
                    td.widget-table-reloading(colspan='10')
                        .ui.active.inverted.dimmer
                            .ui.large.text.loader Reloading ...
                tr(if.bind="clouds.length == 0 && !loading")
                    td.widget-table-empty-alert(colspan='10') You have no clouds
                tr(
                if.bind="clouds.length > 0 && !loading",
                repeat.for='cloud of clouds'
                )
                    td.center.aligned
                        input(type="checkbox")
                    td
                        img.ui.image.tiny(src="${cloud.logo}")
                    td
                        | ${cloud.name}
                    td
                        //TODO circle
                        .status-circle.green
                        | ${cloud.status}
                    td
                        | ${cloud.ip}
                    td
                        | ${cloud.ports}
                    td
                        //TODO graph
                        | ${cloud.cpu}%
                    td
                        //TODO graph
                        | ${cloud.memory}%
                    td
                        //TODO graph
                        | ${cloud.disk}%
                    td
                        i.icon.setting
