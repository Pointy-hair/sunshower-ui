template
    // checkbox
    td.right.aligned
        .ui.child.green.checkbox
            input(name='child', type='checkbox')
            label
    // name
    td
        .ui.link.items
            .item(click.delegate="openEnvironment(model)")
                .ui.middle.aligned.mini.image
                    img(src="${model.icon}")
                .content
                    | ${model.key}
    // location
    td
        | ${model.location}
    // account
    td
        .status-circle.green
        | ${model.account}
    // hosts
    td
        | ${model.hosts}
    // vms
    td
        | ${model.vms}
    // bare metal
    td
        |   ${model.owner.username}
    // owner
    td
        |  ${model.owner.emailAddress}
    td.right.aligned
        i.link.ion-ios-gear-outline.big.blue.icon(click.delegate="configure(provider.id)")