template
    // checkbox
    td.right.aligned
        .ui.child.green.checkbox
            input(name='child', type='checkbox')
            label
    // name
    td
        .ui.link.items
            .item(click.delegate="open()")
                .ui.middle.aligned.mini.image
                    img(src="${model.logo}")
                .content
                    | ${model.name}
    // version
    td
        | ${model.version}
    // status
    td
        .status-circle.green
        | ${model.status}
    // instances
    td
        | ${model.instances}
    // containers
    td
        | ${model.containers}
    // modified
    td
        | ${model.modified}
    // owner
    td
        | ${model.owner.firstname} ${model.owner.lastname}
    td.right.aligned
        i.link.ion-ios-gear-outline.big.blue.icon
