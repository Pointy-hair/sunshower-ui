template
    // checkbox
    td.right.aligned
        .ui.child.green.checkbox
            input(name='child', type='checkbox')
            label
    // name
    td
        .ui.link.items
            .item(click.delegate="open(model)")
                .ui.middle.aligned.mini.image
                    img(src="${model.logo}")
                .content
                    | ${model.name}
    // version
    td
        | ${model.version}
    // status
    td
        .status-circle.green
        | ${model.status}
    // environment
    td
        | ${model.environment}
    // vms
    td
        | ${model.vms}
    // containers
    td
        | ${model.containers}
    td.right.aligned
        i.link.ion-ios-gear-outline.big.blue.icon
