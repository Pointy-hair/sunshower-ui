template
    // checkbox
    td.right.aligned
        .ui.child.green.checkbox
            input(name='child', type='checkbox')
            label
    // name
    td
        .ui.link.items
            .item(click.delegate="openInstance(model)")
                .ui.middle.aligned.mini.image
                    img(src="${model.os}")
                .middle.aligned.content
                    | ${model.name}
    // version
    td(if.bind="model.showVersion")
        | ${model.version}
    // Status
    td
        i.icon.status-circle(class="${computeStatus(model)}")
        | ${model.state}
    // IP
    td
        | ${model.ip}
    // Ports
    td
        | ${model.ports}
    // cpu
    td
        | ${model.cpus}
    // mem
    td
        | ${model.mem}
    // disk
    td
        | ${model.disk}
    td.right.aligned
        i.link.ion-ios-gear-outline.big.blue.icon