template
    .ui.basic.segment
        .ui.active.dimmer(ref="loader" style="position:absolute; top:0; bottom:0; left:0; right:0" if.bind="loading")
            .ui.text.loader Loading Block List...
    .ui.basic.segment
        .ui.fluid.multiple.search.selection.dropdown
            input(name='tags', type='hidden')
            i.dropdown.icon
            .default.text Category
            .menu
                .item(data-value='database') Databases
                .item(data-value='monitoring') Monitoring
        .ui.applications(ref="element" show.bind="!loading")
            .ui.divided.stackable.items
                .item.flex.small--item.app-drag-target(repeat.for="block of elements")
                    .ui.mini.image
                        img(src='${block.icon}')
                    .middle.aligned.content
                        | ${block.name}
