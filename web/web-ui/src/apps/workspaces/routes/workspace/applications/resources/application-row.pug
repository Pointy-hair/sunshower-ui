template
    // checkbox
    td.right.aligned
        .ui.child.green.checkbox
            input(name='child', type='checkbox')
            label
    // name
    td
        .ui.link.items
            .item
                .ui.middle.aligned.mini.image
                    img(src="${application.logo}")
                .content
                    | ${application.name}
    // version
    td
        | ${application.version}
    // status
    td
        .status-circle.green
        | ${application.status}
    // instances
    td
        | ${application.instances}
    // containers
    td
        | ${application.containers}
    // modified
    td
        | ${application.modified}
    // owner
    td
        | ${application.user.firstname} ${application.user.lastname}
    td.right.aligned
        i.link.ion-ios-gear-outline.big.blue.icon
