template
    .ui.segment(if.bind="loading", style="position:absolute; top:47px; left:0; right:0; bottom:0;")
        .ui.active.dimmer(style="width:100%; height:100%;")
            .ui.loader

    .container(if.bind="!loading")
        h1 Create new workspace
        .form-container(style="padding:24px")
            form.ui.form(enctype="multipart/form-data")
                input(type="hidden" name="image-name")
                input(type="hidden" name="image-type")
                .field
                    label Name
                    input(
                        type='text',
                        name='name',
                        placeholder='name',
                        value.bind="name"
                    )
                .field
                    label Description
                    input(
                        type='text',
                        name='description',
                        placeholder='description',
                        value.bind="description"
                    )
                .field
                    label Image
                    input(type="file" name="image", ref="imageElement" change.delegate="onchange()")

                button.ui.button(click.delegate="create()") Create
