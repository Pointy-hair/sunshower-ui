                table.ui.very.basic.very.padded.selectable.table
                    thead
                        tr
                            th.right.aligned
                                .ui.master.checkbox
                                    input(type='checkbox', name='master')
                                    label
                            th Name
                            th Location
                            th Account
                            th Hosts
                            th VMs
                            th Bare Metal
                            th Owner
                            th.right.aligned
                                i.link.big.blue.ion-ios-loop-strong.icon(
                                class="${loading ? 'loading' : ''}"
                                click.delegate="refresh()"
                                )
                    tbody
                        tr(if.bind="loading")
                            td.widget-table-reloading(colspan='10')
                                .ui.active.inverted.dimmer
                                    .ui.huge.loader
                        tr(if.bind="(!providers || providers.length == 0) && !loading")
                            td.widget-table-reloading(colspan='10')
                                .ui.hidden.divider
                                h2.ui.center.aligned.icon.header
                                    |   Looks like you haven't added any cloud providers yet
                                h4.ui.center.aligned.grey.header
                                    |   You can add a cloud now or at deploy time
                                .ui.vertical.center.aligned.segment
                                    .ui.container
                                        .ui.hidden.divider
                                        .ui.secondary.button(click.delegate="addCloud()")
                                            | + Add New Cloud
                                        .ui.hidden.divider
                        tr(
                            show.bind="providers.length > 0 && !loading",
                            as-element="compose",
                            view-model="common/resources/custom-elements/table/row",
                            view="apps/workspaces/resources/custom-elements/table/provider-row.html"
                            repeat.for='provider of providers',
                            model.bind="provider"
