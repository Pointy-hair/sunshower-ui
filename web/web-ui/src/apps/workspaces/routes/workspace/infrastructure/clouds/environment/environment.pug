template
    .overlay.au-animate
        .ui.fluid.container(style="background-color: #fff !important")
            .ui.hidden.divider
            .ui.hidden.divider
            .ui.hidden.divider
            .ui.container
                .ui.secondary.menu
                    .ui.items
                        .item
                            .ui.tiny.image
                                img(
                                src='styles/themes/hasli/assets/images/logos/aws-logo-2.svg'
                                )
                            .middle.aligned.content
                                a.header Hasli AWS Dev Account
                                .meta
                                .description
                                    p
                                .extra
                    .right.menu
                        a.item
                            i.huge.ion-ios-close-empty.icon(click.delegate="close()")
                .ui.secondary.pointing.menu
                    a.item(
                    repeat.for='row of router.navigation',
                    class="${row.isActive ? 'active' : ''}"
                    href.bind='row.href'
                    )
                        | ${row.title}
        .ui.container
            .ui.fitted.divider
            router-view