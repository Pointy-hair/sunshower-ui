template
    //todo add full-page loader
    .overlay.au-animate
        .ui.container
            .ui.secondary.menu
                .right.menu
                    a.item
                        i.huge.ion-ios-close-empty.icon(click.delegate="close()")
            .ui.middle.aligned.center.aligned.grid
                .two.column.centered.row
                    .column
                        h3.ui.center.aligned.header
                            | ADD CREDENTIAL
                        .ui.hidden.divider
                        .ui.hidden.divider

                        h4.ui.dividing.header New Credential
                        .ui.form.overlay-form
                            .ui.field.overlay-field
                                .overlay-label
                                    label Name
                                .overlay-input.ui.input
                                    input(type="text", value.bind="credential.name & validate")

                            .ui.field.overlay-field
                                .overlay-label
                                    label Credential
                                .overlay-input.ui.input
                                    input(type="text", value.bind="credential.credential & validate")

                            .ui.field.overlay-field
                                .overlay-label
                                    label Secret
                                .overlay-input.ui.input
                                    input(type="text", value.bind="credential.secret & validate")

                            .ui.basic.center.aligned.segment
                                button.ui.secondary.button(
                                type="submit",
                                click.delegate="saveCredential()"
                                )
                                    | Save Credential

                        .ui.hidden.divider
                        .ui.divider
                        .ui.hidden.divider

                        h4.ui.dividing.header Existing Credentials on Cloud
                        .ui.grid(ref="filterHolder")
                            .six.wide.column
                                .ui.small.icon.fluid.input
                                    input(ref="credentialSearch" type='text', placeholder='Search')
                                    i.search.icon
                            .six.wide.column
                                .ui.hasli--basic_blue.hasli--blue.fluid.selection.dropdown
                                    input(ref="credentialFilter" type='hidden', name='type')
                                    .default.text.hasli--blue Select: Type
                                    i.dropdown.icon
                                    .menu
                                        .item(data-value="")
                                            i.world.icon
                                            | All
                                        .item(data-value="up")
                                            i.lock.icon
                                            | Username/Password
                                        .item(data-value="iam")
                                            i.protect.icon
                                            | IAM
                                        .item(data-value="ssh")
                                            i.terminal.icon
                                            | SSH
                            .four.wide.right.aligned.column

                        table.ui.very.basic.padded.selectable.table(ref="credentialHolder")
                            thead
                                th
                                    //type
                                th Name
                                th.right.aligned
                                    i.big.blue.ion-ios-loop-strong.icon(
                                    class="${loading ? 'loading' : ''}"
                                    click.delegate="refresh()"
                                    )
                            tbody
                                tr(if.bind="loading")
                                    td.widget-table-reloading(colspan='3')
                                        .ui.active.inverted.dimmer
                                            .ui.large.text.loader Reloading ...
                                tr(if.bind="credentials.length == 0 && !loading")
                                    td.widget-table-empty-alert(colspan='3') You have no credentials
                                tr.credential(
                                if.bind="credentials.length > 0 && !loading",
                                repeat.for='credential of credentials',
                                data-name="${credential.name}",
                                data-type="up"
                                )
                                    td
                                        //type
                                    td
                                        | ${credential.name}
                                    td.right.aligned
                                        i.ion-trash-b.large.red.icon.clickable(
                                        click.delegate="removeCredential(credential)"
                                        )
