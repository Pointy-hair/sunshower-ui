template
    //todo add full-page loader
    .overlay.au-animate
        .ui.container
            .ui.secondary.menu
                .right.menu
                    a.item
                        i.huge.ion-ios-close-empty.icon(click.delegate="close()")
            .ui.middle.aligned.center.aligned.grid
                .two.column.centered.row
                    .column
                        h3.ui.center.aligned.header
                            | ADD CREDENTIAL
                        .ui.hidden.divider
                        .ui.hidden.divider

                        h4.ui.dividing.header Existing Credentials on Cloud
                        .overview-widget
                            //.widget-action-menu
                            //    .ui.small.icon.input
                            //        input(type='text', placeholder='Search')
                            //        i.search.icon
                            table.ui.very.basic.table.widget-table
                                thead
                                    tr
                                        th Name
                                        th.right.aligned
                                            i.big.blue.ion-ios-loop-strong.icon(
                                            class="${loading ? 'loading' : ''}"
                                            click.delegate="refresh()"
                                            )
                                            //settings
                                tbody
                                    tr(if.bind="loading")
                                        td.widget-table-reloading(colspan='2')
                                            .ui.active.inverted.dimmer
                                                .ui.large.text.loader Reloading ...
                                    tr(if.bind="credentials.length == 0 && !loading")
                                        td.widget-table-empty-alert(colspan='2') You have no credentials
                                    tr(
                                    if.bind="credentials.length > 0 && !loading",
                                    repeat.for='credential of credentials'
                                    )
                                        td
                                            | ${credential.name}
                                        td.right.aligned
                                            i.ion-trash-b.large.red.icon(
                                                click.delegate="removeCredential(credential)"
                                            )

                        h4.ui.dividing.header New Credential
                        .ui.form.overlay-form
                            .ui.field.overlay-field
                                .overlay-label
                                    label Name
                                .overlay-input.ui.input
                                    input(type="text", value.bind="credential.name")

                            .ui.field.overlay-field
                                .overlay-label
                                    label Credential
                                .overlay-input.ui.input
                                    input(type="text", value.bind="credential.credential")

                            .ui.field.overlay-field
                                .overlay-label
                                    label Secret
                                .overlay-input.ui.input
                                    input(type="text", value.bind="credential.secret")

                            .ui.basic.center.aligned.segment
                                button.ui.secondary.button(
                                type="submit",
                                click.delegate="saveCredential()"
                                )
                                    | Save Credential
