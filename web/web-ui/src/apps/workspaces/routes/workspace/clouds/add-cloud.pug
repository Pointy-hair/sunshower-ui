template
    .overlay
        .ui.container
            .overlay-close
                i.big.grey.icon.ion-close-round.clickable(click.delegate="close()")
            h2.ui.center.aligned.grey.header Add New Cloud
            template(if.bind="!providerSelected")
                .overlay-action-menu
                    .ui.small.icon.input
                        input(type='text', placeholder='Search')
                        i.search.icon
                    .ui.small.basic.button.primary
                        | Recent
                        i.dropdown.icon
                    span.overlay-icons
                        i.icon.list.layout.large
                        i.icon.grid.layout.large
                .overlay-cards.ui.four.stackable.cards
                    .card(repeat.for="provider of providers")
                        .image(click.delegate="selectProvider(provider)")
                            img(src="${provider.icon}" alt="${provider.name}")

            template(if.bind="providerSelected")
                .ui.form
                    img.ui.image.small(src="${provider.icon}" alt="${provider.name}")
                    //input(type="hidden", value.bind="provider.icon")
                    //input(type="hidden", value.bind="provider.key & validate")

                    .ui.hidden.divider

                    .field
                        label Name
                        input(type="text", value.bind="provider.name & validate")

                    .field
                        label Description
                        input(type="text", value.bind="provider.description")

                    .field
                        button.ui.pull-right.button.primary(
                            type="submit",
                            click.delegate="saveProvider()"
                        )
                            | Save Provider