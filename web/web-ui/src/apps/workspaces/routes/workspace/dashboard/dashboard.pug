                                img(src='styles/themes/hasli/assets/images/logos/nodejs-logo.svg')
                            .ui.basic.label
                                img(src='styles/themes/hasli/assets/images/logos/redis-logo.svg')
                            .ui.basic.label
                                img(src='styles/themes/hasli/assets/images/logos/mysql-logo.svg')
