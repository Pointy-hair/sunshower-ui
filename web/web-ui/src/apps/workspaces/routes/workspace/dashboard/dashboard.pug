template
    require(from="apps/workspaces/resources/custom-elements/charts/line-chart")
    require(from="apps/workspaces/resources/custom-elements/charts/chart-stat.html")
    .ui.hidden.divider
    .ui.container
        .ui.basic.segment
            h2.ui.header
                i.circular.green.ion-ios-monitor-outline.icon.circular--icon.circular--icon_green
                .content
                    |   Dashboard
        .ui.hidden.divider
    .ui.fluid.container
        .ui.hidden.divider
        .ui.container.equal.height.grid
            .row
                .eight.wide.column
                    .ui.basic.segment
                        .chart-header
                            | Total Number of Instances
                        chart-stat(value="0", color="rgba(56, 155, 255, .8)")
                        .chart
                            line-chart(data.bind="totalInstancesData")
                .eight.wide.column
                    .ui.basic.segment
                        .chart-header
                            | Running Instances
                        chart-stat(value="0", color="#1EC38A")
                        .chart
                            line-chart(data.bind="totalInstanceStatuses")
    .ui.divider
    .ui.hidden.divider
    .ui.container
        h1.ui.header
            | Dustin's Awesome App
        .ui.hidden.divider
        .ui.basic.segment
            h3.ui.header
                | Applications
            .ui.divider
            .ui.text.menu
                .item
                    .ui.icon.green.input
                        input(type='text', placeholder='Search...')
                        i.search.icon
                .item
                    .ui.selection.dropdown
                        | Dropdown
                        i.dropdown.icon
                        .menu
                            .item Choice 1
                            .item Choice 2
                            .item Choice 3
                .item
                    .ui.action.input
                        input(type='text', placeholder='Navigate to...')
                        .ui.basic.primary.button Go
                .right.floated.item
                    .ui.primary.basic.mini.button(type='button', click.trigger='create()')
                        | + CREATE
            .ui.hidden.divider
            .ui.divided.items
                .item
                    .content
                        a.header Dustin's Awesome App - AWS US West
                        .ui.right.floated.tiny.basic.green.button
                            | Edit
                        .meta
