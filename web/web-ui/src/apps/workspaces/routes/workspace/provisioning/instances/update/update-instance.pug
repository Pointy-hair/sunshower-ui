    .header
        .center.aligned
            | UPDATE INSTANCE
    .content
        table.ui.striped.table
            thead
                tr
                    th
                    th Version
                    th Description
                    th Author
                    th Created At
            tbody
                tr(repeat.for='version of currentVersions')
                    td
                        .ui.radio.checkbox
                            input(
                                type='radio',
                                name="appOptions",
                                model.bind='version',
                                checked.bind="$parent.selectedVersion",
                                click.delegate="selected()"
                            )
                            label
                    td
                        .ui.divided.selection.list
                            a.item
                                | ${version.version}
                                // TODO tag with LATEST
                                a.ui.green.horizontal.label
                                    | LATEST
                    td ${version.description}
                    td ${version.owner}
                    td ${version.date}
        .ui.segment
            h3.ui.dividing.header Changes
    .actions
        button.ui.right.primary.button(click.delegate="complete()")
            | Update