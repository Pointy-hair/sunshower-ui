template
    .ui.grid
        .row
            .column
                h4.ui.dividing.header
                    | Summary
                .ui.basic.segment
                    p
                        | Name: Dustin's Awesome App
                    p
                        | Cloud: Dustin's AWS
                    p
                        | Tag: Production
        .row
            .column
                h4.ui.dividing.header
                    | Applications
        .row.two.column.grid
            .column(repeat.for="application of wizard.applications")
                .ui.tiny.image
                    img(src='/hasli/api/v1/applications/${application.picture.id}/picture')
                .ui.items
                    .item
                        .content
                            .meta
                                span Details
                            .description
                                p
                                    | Name: ${application.name}
                                P
                                    | Size: t2.micro 1 cpu, 1 gb memory