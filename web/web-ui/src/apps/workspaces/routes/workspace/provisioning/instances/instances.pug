template
    require(from="apps/workspaces/resources/custom-elements/charts/line-chart")
    require(from="apps/workspaces/resources/custom-elements/charts/chart-stat.html")

    .ui.hidden.divider

    .ui.container
        .ui.basic.segment
            h2.ui.header
                .content
                    |   Instances
        .ui.hidden.divider
        .ui.basic.segment
            .ui.grid
                .four.wide.column
                    .ui.small.icon.fluid.input
                        input(type='text', placeholder='Search')
                        i.search.icon
                .eight.wide.column
                    .ui.hasli--basic_blue.hasli--blue.selection.dropdown
                        | Actions
                        i.dropdown.icon
                        .menu
                            .item
                                i.ion-ios-copy.large.grey.icon
                                | Clone
                            .item
                                i.ion-arrow-right-a.large.grey.icon
                                | Update Instance
                            .item
                                i.ion-trash-a.large.grey.icon
                                | Delete
                    .ui.hasli--basic_blue.hasli--blue.selection.dropdown
                        input(type='hidden', name='type')
                        .default.text.hasli--blue Select: Type
                        i.dropdown.icon
                        .menu
                            .item(data-value="1") All
                            .item(data-value="2") Docker
                            .item(data-value="3") Docker Compose
                .four.wide.right.aligned.column
                    span.widget-icons
                        .ui.small.button.primary(click.delegate="createInstance()")
                            | + Create New
                        compose(view-model='./create/create-instance')
                table.ui.very.basic.very.padded.selectable.table
                    thead
                        tr
                            th.right.aligned
                                .ui.master.checkbox
                                    input(type='checkbox', name='master')
                                    label
                            th Name
                            th Version
                            th Status
                            th Environment
                            th VMs
                            th Containers
                            th.right.aligned
                                i.link.big.blue.ion-ios-loop-strong.icon(
                                class="${loading ? 'loading' : ''}"
                                click.delegate="refresh()"
                            )
                    tbody
                        tr(if.bind="loading")
                            td.widget-table-reloading(colspan='10')
                                .ui.active.inverted.dimmer
                                    .ui.huge.loader
                        tr(if.bind="(!instances || instances.length == 0) && !loading")
                            td.widget-table-reloading(colspan='10')
                                .ui.hidden.divider
                                h2.ui.center.aligned.icon.header
                                    |   Looks like you don't have any instances, create a new one!
                                h4.ui.center.aligned.grey.header
                                    |   You'll need to add a cloud provider before deploying any instances
                                .ui.basic.center.aligned.segment
                                    .ui.secondary.button(click.delegate="createInstance()")
                                        | Create Instance
                                    .ui.hidden.divider
                        tr(
                            if.bind="instances.length > 0 && !loading",
                            as-element="compose",
                            view-model="common/resources/custom-elements/table/row",
                            view="apps/workspaces/resources/custom-elements/table/instance-row.html"
                            repeat.for='instance of instances',
                            model.bind="instance",
                        )

