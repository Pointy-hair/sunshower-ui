template
    .ui.fluid.container
        .ui.hidden.divider
        .ui.grid
            .ui.three.wide.column
                .ui.basic.segment.catalog--sidebar
                    .ui.secondary.vertical.menu
                        .item
                            .header.catalog--category_header
                                | Categories
                        .item
                            .header.catalog--category_header
                                | Applications
                            .menu
                                a.item.catalog--category_item(repeat.for='row of router.navigation',
                                        class="${row.isActive ? 'active' : ''}",
                                        href.bind='row.href',
                                        if.bind="row.settings.category == 'Applications'")
                                    | ${row.title}
                        .item
                            .header.catalog--category_header
                                | Services
                            .menu
                                a.item.catalog--category_item(repeat.for='row of router.navigation',
                                        class="${row.isActive ? 'active' : ''}",
                                        href.bind='row.href',
                                        if.bind="row.settings.category == 'Services'")
                                    | ${row.title}
                        .item
                            .header.catalog--category_header
                                | Infrastructure
                            .menu
                                a.item.catalog--category_item(repeat.for='row of router.navigation',
                                        class="${row.isActive ? 'active' : ''}",
                                        href.bind='row.href',
                                        if.bind="row.settings.category == 'Infrastructure'")
                                    | ${row.title}
            .ui.twelve.wide.column
                .ui.hidden.divider
                .ui.grid
                    .four.wide.column
                        .ui.icon.fluid.input
                            input.prompt(type='text', placeholder='Search animals...')
                            i.search.icon
                        .ui.hidden.divider
                    .two.wide.column
                        .ui.selection.dropdown
                            input(type='hidden', name='Filter')
                            i.dropdown.icon
                            .default.text Gender
                            .menu
                                .item(data-value='1') Most Popular
                                .item(data-value='0') Recently Added
                    .nine.wide.center.aligned.column
                        .ui.relaxed.horizontal.middle.aligned.list
                            .item
                                i.big.ion-android-apps.icon
                                .content
                                    .header Applications (0)
                            .item
                                i.big.ion-social-buffer.icon
                                .content
                                    .header Services (0)
                            .item
                                i.big.ion-laptop.icon
                                .content
                                    .header Infrastructure (0)
                    .one.wide.right.aligned.column
                        .ui.primary.button
                            | Deploy
                router-view
        .ui.hidden.divider
        .ui.hidden.divider
        .ui.hidden.divider
