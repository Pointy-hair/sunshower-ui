template
    .ui.grid
        h5.ui.header
            | 1 - ${applications.length} of ${applications.length} available images.
        .ui.hidden.divider
        .ui.basic.segment
            .ui.cards
                .card(repeat.for="application of applications")
                    .content
                        img.right.floated.mini.ui.image(src='/hasli/api/v1/applications/${application.picture.id}/picture')
                        .header
                            | ${application.name}
                        //.meta
                        //    | Docker Compose
                        .description
                            | ${application.description}
                    .extra.content
                        .ui.two.buttons
                            .ui.basic.secondary.button(click.delegate="select(application, $event)") Add
                            .ui.basic.blue.button(click.delegate="open($event)") View
