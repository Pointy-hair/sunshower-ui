template(bindable="router")
    require(from="common/elements/profile-dropdown")
    .ui.secondary.menu.navbar(ref="element")
        img.ui.image.item.header(src="styles/themes/hasli/assets/images/logos/hasli-logo.svg", click.delegate="router.navigate('#/main')")
        .right.compact.menu
            a.fitted.item
                i.large.inverted.ion-grid.icon
                .ui.popup.transition.hidden.popup--transition
                    h4.ui.grey.center.aligned.header GLOBAL SETTINGS
                    .ui.hidden.divider
                    .ui.labeled.icon.fluid.three.item.menu
                        template(repeat.for='row of router.navigation', class="${row.isActive ? 'active' : ''}")
                            a.item(if.bind="$even", href.bind='row.href')
                                i(class="${row.settings.icon}")
                                | ${row.title}
                    .ui.labeled.icon.fluid.three.item.menu
                        template(repeat.for='row of router.navigation', class="${row.isActive ? 'active' : ''}", href.bind='row.href')
                            a.item(if.bind="$odd", href.bind='row.href')
                                i(class="${row.settings.icon}")
                                | ${row.title}
            a.fitted.item
                i.large.inverted.ion-ios-pulse-strong.icon
            a.fitted.item
                i.large.green.ion-android-notifications-none.icon
            a.item
                profile-dropdown