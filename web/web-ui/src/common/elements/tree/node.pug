template(bindable="node")
    li
        .icell
            i.caret.down.icon(show.bind="node.children", click.delegate="toggle($event)")
            a(href="whatever") ${node.name}
            i.r.hide.icon
        ul(if.bind="node.children")
            li(repeat.for="child of node.children" )
                .icell
                    .nodeicon(if.bind="child.icon")
                        img(
                            src="${child.icon}",
                            width="16px" height="16px"
                        )
                    i.caret.down.icon(show.bind="child.children", click.delegate="toggle($event)")
                    a(href="whatever") ${child.name}
                    i.r.hide.icon
                ul(if.bind="child.children" repeat.for="c of child.children")
                    node(node.bind="c")
