{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es5",
    "module": "amd",
    "declaration": false,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "baseUrl": "./src",
    "paths": {
//      "src/*": ["src/*"]
      "*" : ["*"]
    }
  },
  "filesGlob": [
    "!./typings/globals/angular-protractor/**",
    "./src/**/*.ts",
//    "./test/**/*.ts",
    "!./node_modules/**/*.d.ts",
    "./typings/index.d.ts",
    "./tsd/**/*.d.ts",
    "./custom_typings/**/*.d.ts",
    "./jspm_packages/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "jspm_packages",
    "test"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
