@navbarbg: #171B26;
.navbar {
  height: @headerheight;
  z-index: 2;
  line-height: @headerheight;
  background: @navbarbg !important;
  color: white;
  box-shadow: none;
  border-radius: 0;
  margin-bottom: 0;
  left: 0;
  right: 0;
  top: 0;
  position: fixed;

  .ui.dropdown .ui.menu {
    z-index:105 !important;

    //a lot of this nesting is needed to stop being trampled by semantic ui

    &.inverted {
      background: @navbarbg;

      &>.item {
        color: @hasliLightGrey !important;
        border-bottom: 1px solid lighten(@navbarbg, 5%) !important;
        white-space: normal;
        line-height: 1.1em;

        .meta { font-size: .75em; }


        &:hover {
          background: lighten(@navbarbg, 5%) !important;
          color: @hasliLightGrey !important;
        }

        .icon.alert-type-icon {
          font-size:2em !important;
        }
      }

      &:after {
        background: @navbarbg !important;

      }
    }

    &.content-dropdown {
      width:400px;
      min-width:400px;

      .ui.progress>.label {
        color: @hasliLightGrey;
        font-weight:normal;
        //todo move above progress bar
      }
    }
  }
}


