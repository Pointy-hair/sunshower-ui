//TODO make sure site variables align with the required colors
@hasliGrey: #7D7C7C;
@hasliStandardGrey: #D6D6D7;
@hasliLightGrey: lighten(@hasliStandardGrey, 5%);
@hasliem: 16px;
@sidenavwidth: 25%;

.overlay {
  position: fixed;
  left: 0;
  top: @headerheight;
  right: 0;
  bottom: @footerheight;
  overflow-y: auto;
  overflow-x: hidden;
  background-color: white;
  z-index:1;

  & > .ui.container {
    position:relative;
  }

  h2.center.aligned.header {
    margin-bottom:2.5em;
  }
}

.overlay-close {
  position:absolute;
  top:0;
  right:0;
  text-align:center;
  font-weight:bold;
  color: @hasliStandardGrey;
  * {
    display: block;
  }
  i.icon {
    margin:0;
    font-size:1.75em;
  }
  span {
    margin-top: .25em;
    font-size: 1.25em;
  }

  .clickable
}

//@cardmargin:120px;
.overlay-cards.ui.four.cards {
  .card {
    //margin-right: @cardmargin !important;
    //margin-bottom: @cardmargin !important;
    //width:calc(~"25% - "@cardmargin);
    position:relative;
    padding-bottom:12.5%;
  }

  .overlay-card--image {
    position:absolute;
    top:50%;
    right: 5%;
    bottom:5%;
    left:5%;
    transform: perspective(1px) translateY(-55%);
    max-width:90%;
    max-height:90%;
    width:auto;
    height:auto;
  }

  .overlay-card--label {
    text-align:center;
    color: @hasliGrey;
    font-weight: bold;
    position:absolute;
    left:0;
    right:0;
    //bottom:-@cardmargin/3;
    bottom: -40px;
  }

}

.overlay-input-centered {
  font-size: 20px;
  text-align: center !important;
}

.overlay-sidenav {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  overflow: hidden;
  box-sizing: border-box;
  border-right: 1px solid @hasliStandardGrey;
  width:@sidenavwidth !important;
}

.overlay-header {
  text-align:center;
  .inline.dropdown {
    text-align:inherit !important;
    img {
      margin: 0 auto !important;
    }
  }
}

.overlay-header-image {
  margin-top:32px;
  img {
    margin: auto;
    width: 80px;
    height:80px;
  }
}
.overlay-header-label, .overlay-header-sublabel {
  display: block;
  margin: @hasliem auto;
  text-align:center;
}
.overlay-header-label {
  font-weight: bold;
}

.overlay-segment {
  border: 1px solid @hasliLightGrey;
  border-radius: 5px;
  padding:@hasliem;
  margin:@hasliem;
  .segment-header {
    color: @hasliGrey;
    font-weight:bold;
    border-bottom: 1px solid @hasliLightGrey;
    font-size:1.75rem;
    padding-bottom:1rem;
    line-height: normal;
    height: auto;
  }

  .segment-body, .ui.secondary.vertical.pointing.menu {
    width:100% !important;
    float:none;
    .item {
      width: auto;
      margin: 1rem 0 1rem -@hasliem !important;
      padding: 0 0 0 @hasliem !important;
      color: @hasliGrey;
      border-left:2px solid transparent !important;
      &.active {
        color: @primaryColor;
        border-left:2px solid @primaryColor !important;
      }
      .clearfix
    }
  }

}

.item.closeable {
  position:relative;

  .hover-close {
    display: none;

    top:-7px;
    right:-11px;
    position:absolute;
    cursor:pointer;
  }

  &:hover .hover-close {
    display:block;
  }

}

.ui.horizontal.list.pills > .item {
    margin-left: 0 !important;
    margin-right: 1em !important;
}

.modal {
  margin-top:-250px !important;
  .ui.card>.image, .ui.cards>.card>.image {
    background: inherit !important;
  }
}

.overlay-action-menu, .widget-action-menu {
  &> * {
    display: inline-block;
    margin-right:3rem;
  }
  * {
    border-radius:0 !important;
  }
  .button i.icon:last-child {
    margin: 0 0 0 .5rem;
  }
  .clearfix
}

.overlay-icons, .widget-icons {
  margin-right:0;
  float:right;
  & > * {
    margin:2px 3rem 0 0;
  }
  i.icon {
    color: @hasliLightGrey;
  }
  .button {
    text-transform: uppercase;
  }
}

.overlay-body {
  width: (100% - @sidenavwidth) !important;
  margin-left: @sidenavwidth;
  box-sizing:border-box;
}

.overlay-body-tab-menu {
  border-bottom: 1px solid @hasliStandardGrey !important;
  >.active {
    border-bottom: 1px solid @primaryColor !important;
  }
}

.overlay-table {
  overflow-y: auto;

  .item img {
    width:24px;
    height: 24px;
  }
}



.property--menu .ui.form {
  padding:1em;
  .overlay-field .overlay-help {
    display: none;
  }
}

.overlay-form {
  .ui.dividing.header {
    font-weight:normal;
    color: @hasliGrey;
    font-size:.9em;
  }

  &.ui.form {
    textarea, input:not([type]), input[type=text], input[type=email], input[type=search], input[type=password], input[type=date], input[type=datetime-local], input[type=tel], input[type=time], input[type=file], input[type=url], input[type=number], .ui.selection.dropdown {
      border-radius: 0;
      &:focus {
        border-radius: 0
      }
    }
  }

  .ui.search.selection.dropdown {
    line-height:24px;
    &:hover, &.active, .menu, .menu:hover, .menu:focus {
      border-color: @primarycolor;
    }
  }


  .field.overlay-field {
    margin: @hasliem 0 !important;
    &>* {
      box-sizing:border-box;
      float:left;
    }
    .overlay-label {
      color: @hasliGrey;
      text-align:right;
      padding-right:1em;
      width:25%;
      padding-top:@hasliem/2;
      font-size: 1.2em;
    }
    .overlay-input {
      width:75% !important;
    }
    .overlay-help {
      color: @hasliGrey;
      width: 10%;
      i {
        margin: auto;
      }
    }

    .ui.error.message {
      margin-left:25%;
      width:75%;
    }

    .clearfix
  }

  .clearfix
}

.fluid.field .message {
  display:block;
  text-align:center;
}

.overlay .overlay-body {
  padding: 32px 64px;
}
.element-editor-body .overlay-body {
  padding:32px;
}

